<!DOCTYPE html>
<html>
  <head>
    <title>Lag</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if alert %>
      <div id="notice_wrapper">
        <p class="alert"><%= alert %></p>
      </div>
    <% elsif notice%>
      <div id="notice_wrapper">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <div class="header">
      <div id="navbar" onclick="openNav()">
        <span></span>
        <span></span>
        <span></span>
      </div>
    <a href="/"><img src="/laging.jpg" alt=""></a>
    </div>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <%= link_to 'Iвенти',ideas_path %>
        <% if user_signed_in?%>
          <%= link_to 'Мої Iдеї', welcome_userideas_path %>
          <%= link_to('Вийти з акаунту', destroy_user_session_path, method: :delete) %>
        <% else %>
        <%= link_to('Увiйти в акаунт', new_user_session_path) %>
        <% end %>
    </div>
    <%= yield %>

    <script>
      $(Document).ready(function(){
        setTimeout(function(){
          $('#notice_wrapper').fadeOut("slow",function(){
            $this.remove();
          });
        },3500 );
      });
    </script>
  </body>
</html>
